<h1>AUTHORS</h1>
<div >
  <label for="author-search">Search: </label>
  <input type="search" id="author-search" name="q" aria-label="Search for authors">
  <button>Go!</button>
</div>
{{#if authors.length}}
  {{#each authors}}
  <div class="item">
    <a href="/authors/edit/{{id}}">{{surname}} {{lastname}}</a>
  </div>
  {{/each}}
{{else}}
<div>
  <p>There is no authors atm..</p>
  <button>Create author</button>
</div>
{{/if}}